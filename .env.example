# ========================================
# AI API Keys
# ========================================
# Gemini API Key (主要)
LLM_API_KEY=你的_GEMINI_API_KEY

# Groq API Key (備援，選填)
GROQ_API_KEY=你的_GROQ_API_KEY

# DeepSeek API Key (備援，選填)
DEEPSEEK_API_KEY=你的_DEEPSEEK_API_KEY

# ========================================
# Port 設定 (避免多台設備衝突)
# ========================================
# 💡 建議：每個人使用不同的 port 組合
# 例如：
#   開發者A: 5001, 3306, 8080
#   開發者B: 5002, 3307, 8081
#   開發者C: 5003, 3308, 8082

FLASK_PORT=5001
MYSQL_PORT=3306
PHPMYADMIN_PORT=8080

# ========================================
# 容器名稱前綴 (選填，用於區分不同開發者)
# ========================================
# 💡 建議設定你的名字或代號，避免容器名稱衝突
# 例如：CONTAINER_PREFIX=ian
# 容器名稱會變成：ian-flask, ian-mysql, ian-phpmyadmin
CONTAINER_PREFIX=
